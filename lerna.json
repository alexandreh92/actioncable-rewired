{
  "packages": ["packages/*"],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "independent",
  "command": {
    "publish": {
      "registry": "https://registry.npmjs.org"
    },
    "version": {
      "createRelease": "github",
      "conventionalCommits": true,
      "allowBranch": ["main", "release/*"],
      "message": "chore(release): publish",
      "noPrivate": true
    }
  }
}
